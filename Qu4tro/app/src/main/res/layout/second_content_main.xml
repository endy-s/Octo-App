<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.quatro.octo.qu4tro.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:paddingBottom="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        android:id="@+id/linearLayout2">

        <TextView
            android:text="@string/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvStatus"
            android:layout_weight="0"
            android:gravity="center"
            android:background="@drawable/layout_border"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/battery"
                    android:src="@mipmap/battery"
                    android:id="@+id/imageView3"
                    android:layout_weight="1"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="@string/bt_bat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/time"
                    android:src="@mipmap/time"
                    android:id="@+id/imageView4"
                    android:layout_weight="1"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="@string/bt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:srcCompat="@mipmap/standup"-->
                    <!--android:src="@mipmap/standup"-->
                    <!--android:id="@+id/imageView5"-->
                    <!--android:layout_weight="1" />-->

                <!--<TextView-->
                    <!--android:text="@string/bt_sup"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/textView13"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center" />-->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/thermout"
                    android:src="@mipmap/thermout"
                    android:id="@+id/imageView6"
                    android:layout_weight="1"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="@string/bt_tempout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/thermin"
                    android:src="@mipmap/thermin"
                    android:id="@+id/imageView7"
                    android:layout_weight="1"
                    android:scaleType="fitCenter" />

                <TextView
                    android:text="@string/bt_tempin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:text="@string/title_not_connected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBatt"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_editor_absoluteY="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <TextView
                    android:text="@string/title_not_connected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDevice"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/guideline"
                    tools:layout_editor_absoluteY="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <!--<TextView-->
                    <!--android:text="@string/title_not_connected"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/textView4"-->
                    <!--app:layout_constraintLeft_toLeftOf="parent"-->
                    <!--app:layout_constraintRight_toLeftOf="@+id/guideline"-->
                    <!--tools:layout_editor_absoluteY="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"/>-->

                <TextView
                    android:text="@string/title_not_connected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/tvEnv" />

                <TextView
                    android:text="@string/title_not_connected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWat"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textView8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="163dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.33470225" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/onoff"
                android:src="@mipmap/onoff"
                android:id="@+id/btOn"
                tools:ignore="ContentDescription"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                tools:background="@android:color/transparent"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:scaleType="fitCenter" />

            <TextView
                android:text="@string/bt_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/light"
                android:src="@mipmap/light"
                android:id="@+id/btLight"
                tools:ignore="ContentDescription"
                tools:background="@android:color/transparent"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.75"
                android:layout_weight="1"
                android:scaleType="fitCenter" />

            <TextView
                android:text="@string/bt_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/track"
                android:id="@+id/btTrack"
                tools:ignore="ContentDescription"
                tools:background="@android:color/transparent"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:scaleType="fitCenter" />

            <TextView
                android:text="@string/bt_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
