<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@drawable/img_main_octo"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:padding="50dp"
        android:src="@drawable/ic_btn_start"
        app:srcCompat="@drawable/ic_btn_start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_tempin"
                android:textAlignment="center"
                android:textColor="@color/text_labels" />

            <ImageView
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="0.5"
                android:src="@drawable/img_divider"
                app:srcCompat="@drawable/img_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icTherm1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:cropToPadding="false"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_therm"
                    app:srcCompat="@drawable/ic_therm" />

                <TextView
                    android:id="@+id/txtWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    fontPath="fonts/segoeui.ttf"
                    android:text="@string/bt_unknow"
                    android:textColor="@color/text_info"
                    android:gravity="center_vertical"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelAmbience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_tempout"
                android:textAlignment="center"
                android:textColor="@color/text_labels" />

            <ImageView
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="0.5"
                android:src="@drawable/img_divider"
                app:srcCompat="@drawable/img_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icTherm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_therm"
                    app:srcCompat="@drawable/ic_therm" />

                <TextView
                    android:id="@+id/txtAmbience"
                    fontPath="fonts/segoeui.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/bt_unknow"
                    android:textColor="@color/text_info"
                    android:gravity="center_vertical"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_bat"
                android:textAlignment="center"
                android:textColor="@color/text_labels" />

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="0.5"
                android:src="@drawable/img_divider"
                app:srcCompat="@drawable/img_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_battery"
                    app:srcCompat="@drawable/ic_battery" />

                <TextView
                    android:id="@+id/txtBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    fontPath="fonts/segoeui.ttf"
                    android:text="@string/bt_unknow"
                    android:textColor="@color/text_info"
                    android:gravity="center_vertical"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_board"
                android:textAlignment="center"
                android:textColor="@color/text_labels" />

            <ImageView
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="0.5"
                android:src="@drawable/img_divider"
                app:srcCompat="@drawable/img_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icBoard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_board"
                    app:srcCompat="@drawable/ic_board" />

                <TextView
                    android:id="@+id/txtBoard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    fontPath="fonts/segoeui.ttf"
                    android:text="@string/bt_board_off"
                    android:textColor="@color/text_info"
                    android:gravity="center_vertical"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fontPath="fonts/segoeui.ttf"
            android:text="@string/bt_last"
            android:textAlignment="center"
            android:textColor="@color/text_labels" />

        <ImageView
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.9"
            android:scaleY="0.5"
            android:src="@drawable/img_divider_big"
            app:srcCompat="@drawable/img_divider_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/ic_rowing" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_unknow"
                android:textAlignment="gravity"
                android:textColor="@color/text_labels" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_unknow"
                android:textAlignment="gravity"
                android:textColor="@color/text_info" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_unknow"
                android:textAlignment="gravity"
                android:textColor="@color/text_info" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                fontPath="fonts/segoeui.ttf"
                android:text="@string/bt_unknow"
                android:textAlignment="gravity"
                android:textColor="@color/text_info" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>