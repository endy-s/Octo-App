<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <ImageView
        android:id="@+id/icHistoryRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/ic_rowing"/>

    <TextView
        android:id="@+id/historyDistTV"
        style="@style/OCTOFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/bt_unknown"
        android:textAlignment="gravity"
        android:textColor="@color/text_info"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/historyTimeTV"
        style="@style/OCTOFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/bt_unknown"
        android:textAlignment="gravity"
        android:textColor="@color/text_info"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/historyKcalTV"
        style="@style/OCTOFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/bt_unknown"
        android:textAlignment="gravity"
        android:textColor="@color/text_info"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/historyDateTV"
        style="@style/OCTOFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/bt_unknown"
        android:textAlignment="gravity"
        android:textColor="@color/text_labels"
        android:textSize="12sp"/>

</LinearLayout>
